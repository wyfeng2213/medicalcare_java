@charset UTF-8;

/*格式化样式*/
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,p,blockquote,th,td {
	margin:0;
	padding:0;
}
}
table {
	border-collapse:collapse;
	border-spacing:0;
}

fieldset,img {
	border:0
}

address,caption,cite,code,dfn,em,strong,th,var {
	font-style:normal;
	font-weight:normal
}

ol,ul {
	list-style:none
}

h1,h2,h3,h4,h5,h6 {
	font-size:100%;
	font-weight:normal
}

abbr,acronym {
	border:0
}

input,button{
	vertical-align: middle;
	border:0;
	border:none;
	outline: none
}

a {
	display: block;
	text-decoration: none;
}
*{
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);  
	box-sizing: border-box;
}
a:hover{
	-webkit-tap-highlight-color: transparent;
}
a:visited{
	color:#00327a;
}
img {
	width: 100%;
	height: auto;
	vertical-align: middle;
	outline: none;
}
input[type="button"], input[type="submit"], input[type="reset"] {
	-webkit-appearance: none;
}

textarea {  -webkit-appearance: none;}

i,em{
	font-style: normal;
}
/*公共样式*/
.clearfix:after {
	content:".";
	display:block;
	height:0;
	clear:both;
	visibility:hidden
}

.clearfix {
	*+height:1%;
}
button{
	font-family: "Microsoft YaHei","Arial","宋体",sans-serif;
	-webkit-tap-highlight-color: rgba(0,0,0,0); 
	-webkit-tap-highlight-color: transparent;
	cursor: pointer;
}
html {
	font-family: "Microsoft YaHei","黑体","SimHei ","Arial","宋体",sans-serif;
	width: 100%;

}
body{
  	line-height: 1;
	-webkit-text-size-adjust: 100% !important; 
  	text-size-adjust: 100% !important; 
    -moz-text-size-adjust: 100% !important;
}
#page-wrap{
	font-size: 0.15rem;
	background: #f0f4f9;
	min-height: 100vh;
	color: #666;
}
input,a,button{
	font-size: 0.15rem;
	color: #666;
	letter-spacing: 1px;
}
.ellipse{
	width: 3.1rem;
	height: 0.5rem;
	line-height: 0.5rem;
	border-radius: 0.23rem;
	background: #fff;
}
#toastMessage{
	position:fixed;
	display: block;
	top: 40%;
	left: 0;
	right: 0;
	margin:auto;
	background: rgba(0,0,0,0.6);
	color: #fff;
	font-size: 0.18rem;
	padding: 0.1rem;
	overflow:hidden;
	width: 2.5rem;
	line-height: 0.25rem;
	border-radius: 0.04rem;
	-webkit-border-radius:0.04rem;
	text-align: center;
	z-index: 999999;
}
