@charset "utf-8";
/* CSS Document */
html{font-size:100px;}
html,body,div,span,object,iframe,h1,h2,h3,h4,h5,h6,p,blockquote,pre,abbr,address,cite,code,del,dfn,em,img,ins,kbd,q,samp,small,strong,sub,sup,var,b,i,dl,dt,dd,ol,ul,li,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td,article,aside,canvas,details,figcaption,figure,footer,header,hgroup,menu,nav,section,summary,time,mark,audio,video{margin:0;padding:0;outline:0;border:0;background:transparent;vertical-align:baseline;}
@font-face {
  font-family: BASE;
  src: local('PingFang SC'),
       local("Microsoft Yahei");
}
*{-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box}
body{ margin:0; padding:0;background:#f5f5f5;font-family:"Microsoft Yahei",Helvetica,Arial,sans-serif; font-size: 1.4rem; line-height:1.42857143}
div,form,img,ul,ol,li,dl,dt,dd,p,h1,h2,h3,h4,h5,h6 {margin:0; padding:0; border:0; }
ul,li{margin:0; padding:0; list-style:none;}
a,div{ color:#333;}
a{margin:0;padding:0;background:0 0;color:#3c9be6;vertical-align:baseline;text-decoration:none;}
a:link {text-decoration: none;}
a:visited {text-decoration: none;}
a:hover {color:#859bb0;text-decoration:none;}
a:active {text-decoration: none;}
em,i{ font-style:normal;}
a:focus,input:focus{outline:none;}

:-moz-placeholder {color: #ed3a40;opacity:1;}
::-moz-placeholder {color: #ed3a40;opacity:1;}
input:-ms-input-placeholder{color: #ed3a40;opacity:1;}
input::-webkit-input-placeholder{color: #ed3a40;opacity:1;}

.content-main{position:relative;top:0rem;left:0;width:100%}
.containe{max-width:750px; margin:0 auto; background:#fff;}
.back{position:fixed;top:0;left:0;z-index: 2;background:#fff;width:7.5rem;left: 50%;margin-left: -3.75rem;display: none;}
.back img{position:absolute;left:0.2rem;top:0.2rem;height: 0.4rem;}
.back p{text-align: center;line-height: 0.8rem;font-size:0.4rem;color:#333;}
.tab{ width:100%; height:0.9rem;line-height:0.9rem;padding:0 0.3rem; background:#fff;border-bottom:0.03rem solid #1abcf1; position:relative; }
.tab li{ width:25%;height:0.9rem;line-height:0.9rem;float:left; text-align:center; position:relative;}
.tab li a{ display:block;font-size:0.32rem; color:#999;}
.tab li.on a{color:#358bf7}

.tab li.on i{ width:0.8rem; height:0.05rem; /*background:#09F;*/ position:absolute; bottom:0.02rem; display:block; left:50%; margin-left:-0.4rem;background: linear-gradient(to right, #1abcf1, #0f7aff); }

.tabBox{ height:100%; padding-bottom:0.88rem}
.tabBox .tempWrap{ width:100%; height:100%; overflow:hidden;}

.tabBox .list li{ padding:0.3rem 0 0.22rem; cursor:pointer; /*height:2.24rem; */border-bottom:1px solid #d9dbdd; position:relative; margin:0 0.2rem}
.tabBox .list li h3{ width:4.62rem;font-size:0.32rem; font-weight:300; color:#333;/* height:0.5rem;display:block; overflow:hidden;text-overflow: ellipsis; white-space: nowrap;*/ }
/*.tabBox .list li:hover h3{color:#358bf7;}*/
.tabBox .list li .text{font-size:0.24rem; color:#666;padding-left:2.45rem;margin-top:-0.05rem;/*height:1.68rem;*/}
.tabBox .list li .text .info{ padding-top:0.05rem; height:0.78rem; display:block; overflow:hidden; margin-bottom:0.15rem; color:#666;}
.tabBox .list li .time{ color:#999; width:100%; display:inline-block; text-align:right;}

.tabBox .list li .img{ width:2.20rem; height:1.60rem; display:inline-block; overflow:hidden; position:absolute; left:0}
.tabBox .list li .img img{width:2.20rem; height:1.60rem;}

.tabBox .list li.last{ border-bottom:none;}
.tabBox .list li .link{ width:100%; height:100%; display:block; position:absolute; top:0; left:0;}