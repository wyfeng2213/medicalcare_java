#page-wrap{
	text-align: center;
}
.download-ios,.download-android{
	text-align: center;
	color: #fff;
	background: #358bf7;
	margin: 0.4rem auto 0;
	font-size: 0.18rem;
}
.tips{
	display: inline-block;
	margin:1.5rem 0 0.4rem 0;
	font-size: 0.18rem;
}
.icon-app{
/*	display: inline-block;*/
	width: 0.4rem;
	height: 0.3rem;
/* 	background: #007AFF;*/
 }
.title-app{
	font-size: 0.3rem;
	letter-spacing: 1.5px;
	line-height: 0.6rem;
}
.desc-app{
	color: #BBBBBB;
	letter-spacing: 1.5px;
}
.apply-success{
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 0.8rem;
	background: #cddff7;
	color: #208ffb;
	line-height: 0.8rem;
	text-align: left;
	font-size: 0.18rem;
}
.apply-success i{
	position: relative;
	display: inline-block;
	width: 0.25rem;
	height: 0.25rem;
	background: #208ffb;
	color: #fff;
	border-radius: 50%;
	font-size: 0.16rem;
	vertical-align: middle;
	line-height: 0.25rem;
	text-align: center;
	margin:0 0.1rem 0 0.2rem;
	/*margin:0.25rem 0 0 0;*/
}

